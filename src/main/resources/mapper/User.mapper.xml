<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nenu.innovation.mapper.UserMapper">
    <resultMap id="userResultMap" type="User">
        <id column="id" property="id"/>
        <result column="username" property="username"/>
        <result column="password" property="password"/>
        <result column="status" property="status" />
    </resultMap>

    <insert id="newUser">
        INSERT INTO t_user (username, password)
        VALUES(#{user.username}, #{user.password})
    </insert>

    <select id="countByUser" resultType="int">
        SELECT COUNT(1)
        FROM t_user
        WHERE username = #{user.username}
        AND password = #{user.password}
        AND status = 1;
    </select>

    <select id="checkExistByUsername" resultType="int">
        SELECT COUNT(1)
        FROM t_user
        WHERE username = #{username}
    </select>

    <select id="listAll" resultMap="userResultMap">
        SELECT * FROM t_user
        WHERE type = 1;
        ORDER BY created_time
    </select>

    <select id="count" resultType="integer">
        SELECT COUNT(1)
        FROM t_user
    </select>

    <update id="setStatus">
        UPDATE `t_user`
        SET status = #{status}
        WHERE id = #{id}
    </update>

    <update id="updateUserInfo">
        UPDATE `t_user`
        SET username = #{username},password = #{password}
        WHERE id = #{id}
    </update>

    <select id="queryById" resultMap="userResultMap">
        SELECT * FROM `t_user`
        WHERE id = #{id}
    </select>

    <delete id="deleteById">
        DELETE FROM `t_user`
        WHERE id = #{id}
    </delete>

    <select id="queryBySearchInfo" resultMap="userResultMap">
        SELECT * FROM `t_user`
        <if test="username == null and status == 0">

        </if>
        <if test="username != null and status == 0">
            WHERE username LIKE "%"#{username}"%"
        </if>
        <if test="username != null and status != null and status != 0">
            WHERE username LIKE "%"#{username}"%" AND status = #{status}
        </if>
        <if test="username != null and status == null">
            WHERE username LIKE "%"#{username}"%"
        </if>
        <if test="username == null and status != null and status != 0 ">
            WHERE status = #{status}
        </if>
    </select>
</mapper>